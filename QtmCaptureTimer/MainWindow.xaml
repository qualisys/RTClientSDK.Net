<Window x:Class="QtmCaptureTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QtmCaptureTimer"
        mc:Ignorable="d"
        Title="{Binding TitleText}" WindowStartupLocation="CenterScreen" Height="400" Width="1000">

    <Window.Resources>

    </Window.Resources>
    <Grid Background="Black">
        <Viewbox HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" Width="Auto">
            <Label HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" 
                     Width="Auto" Content="{Binding Time, Mode=OneWay}" IsEnabled="True" Foreground="White" FontSize="72"
                />
        </Viewbox>
    </Grid>
</Window>
